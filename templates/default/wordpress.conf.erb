# Generated by Chef for <%= node["fqdn"] %>
server {
  listen 0.0.0.0:80 default_server;
  server_name default;

  root /vagrant/web;
  index index.html index.htm;

  location / {
    try_files $uri $uri/ /index.php?$args;
  }

  location = /clear.gif {
    empty_gif;
    expires max;
  }

  location ~ /. {
    deny all;
    access_log off;
    log_not_found off;
  }

  location = /favicon.ico {
    allow all;
    log_not_found off;
    access_log off;
  }

  location = /robots.txt {
    allow all;
    log_not_found off;
    access_log off;
  }

  location = /404.html {
    try_files /vagrant/public/404.html <%= node["nginx"]["web_dir"] %>/404.html =404;
  }

  location = /50x.html {
    try_files /vagrant/public/50x.html <%= node["nginx"]["web_dir"] %>/50x.html =500;
  }

  error_page 404 /404.html;
  error_page 500 /50x.html;
  error_page 502 /50x.html;
  error_page 503 /50x.html;
  error_page 504 /50x.html;

  location ~ [^/]\.php(/|$) {
    fastcgi_split_path_info ^(.+?\.php)(/.*)$;

    if (!-f $document_root$fastcgi_script_name) {
      return 404;
    }

    fastcgi_pass unix:<%= node["php"]["run_dir"] %>/www.socket;
    fastcgi_index index.php;

    include <%= node["nginx"]["config_dir"] %>/fastcgi.params;
  }
}
