    <%= @remove_service % node["mongodb"]["server"]["service_name"] %>
  fi

  return 1
}

function main() {
  parse "$@"

  activate_type
  activate_memcached
  activate_redis
  activate_elasticsearch
  activate_mysql
  activate_pgsql
  activate_mongodb
}

main "$@"
