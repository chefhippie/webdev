  else
    <%= @stop_service % node["postgresql"]["server"]["service_name"] %>
    <%= @remove_service % node["postgresql"]["server"]["service_name"] %>
  fi

  return 1
}

function activate_mongodb() {
  if [ $MONGODB -eq 1 ]
  then
    <%= @create_service % node["mongodb"]["server"]["service_name"] %>
