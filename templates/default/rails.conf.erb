# Generated by Chef for <%= node["fqdn"] %>
upstream rails {
  server 127.0.0.1:3000;
}

server {
  listen 0.0.0.0:80 default_server;
  server_name default;

  root /vagrant/public;
  index index.html index.htm;

  location / {
    try_files $uri @app;
  }

  location = /favicon.ico {
    allow all;
    log_not_found off;
    access_log off;
  }

  location = /robots.txt {
    allow all;
    log_not_found off;
    access_log off;
  }

  location = /404.html {
    try_files /vagrant/public/404.html <%= node["nginx"]["web_dir"] %>/404.html =404;
  }

  location = /50x.html {
    try_files /vagrant/public/50x.html <%= node["nginx"]["web_dir"] %>/50x.html =500;
  }

  error_page 404 /404.html;
  error_page 500 /50x.html;
  error_page 502 /50x.html;
  error_page 503 /50x.html;
  error_page 504 /50x.html;

  location @app {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;

    proxy_pass http://rails;
  }
}
